<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="775.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.DiskAnalyzerController">
   <top>
      <VBox prefHeight="117.0" prefWidth="775.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Анализатор дискового пространства">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets left="180.0" top="14.0" />
               </VBox.margin>
            </Label>
            <Label text="Выберите диск или папку для анализа дискового пространства">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="14.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="24.0" prefWidth="775.0">
               <children>
                  <Label prefHeight="30.0" prefWidth="56.0" text="Путь:">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="14.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="textWay" editable="false" prefHeight="26.0" prefWidth="388.0" promptText="Выберите папку" />
                  <Button fx:id="btnChoosingDirectory" mnemonicParsing="false" onAction="#btnChoosingDirectory" prefHeight="26.0" prefWidth="79.0" text="Выбрать" />
                  <Button fx:id="btnClearWayAndPieChart" mnemonicParsing="false" onAction="#btnClearWayAndPieChart" prefHeight="26.0" prefWidth="79.0" text="Очистить">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnStartAnalys" mnemonicParsing="false" onAction="#btnStartAnalys" prefHeight="26.0" prefWidth="79.0" text="Старт">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnGoBack" mnemonicParsing="false" onAction="#btnGoBack" prefHeight="26.0" prefWidth="79.0" text="Назад">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnNewWindow" mnemonicParsing="false" onAction="#btnNewWindow" prefHeight="25.0" prefWidth="145.0" text="Открыть в новом окне">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Label text="Для удобства использования, откройте в новом окне">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="14.0" top="4.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <PieChart fx:id="pieChart" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
