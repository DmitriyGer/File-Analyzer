<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.DiskAnalyzerController">
    <center>
        <PieChart fx:id="pieChart" />
    </center>
   <top>
      <HBox prefHeight="26.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnChooseDir" mnemonicParsing="false" onAction="#btnChooseDir" text="Выберите папку">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnGoBack" mnemonicParsing="false" onAction="#btnGoBack" text="Назад">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnNewWindow" mnemonicParsing="false" onAction="#btnNewWindow" text="Открыть в новом окне">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </top>
</BorderPane>
